#include <gtest/gtest.h>
#include "Camion.h"
using namespace saaq;
using namespace std;
util::Date uneDate;

/**
 * \brief Test du Constructeur Camion(int p_poids, int p_nbEssieux, std::string& p_niv, std::string p_immatriculation, util::Date& p_dateEnregistrement);
 *        cas valide:
 *				      p_poids > 3000
 *				      p_nbEssieux >=2
 *        cas invalides:
 *        			  p_nbPlaces <=3000
 *                    p_nbEssieux <2
 *
 */
TEST(Camion, ConstructeurAvecParametreValide)
{
	VehiculePromenade testPromenade(1, "3VWFE21C04M000001", "IFT 006", uneDate);
	ASSERT_EQ(1,testPromenade.req_nbPlaces());
	ASSERT_EQ("3VWFE21C04M000001",testPromenade.reqNiv());
	ASSERT_EQ("IFT 006",testPromenade.reqImmatriculation());
	ASSERT_EQ(true, util::Date::validerDate(uneDate.reqJour(), uneDate.reqMois(), uneDate.reqAnnee()));
}




